@prefix map: <#> .
@prefix db: <> .
@prefix vocab: <vocab/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix d2rq: <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix jdbc: <http://d2rq.org/terms/jdbc/> .
@prefix schm: <http://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

map:database a d2rq:Database;
	d2rq:jdbcDriver "org.postgresql.Driver";
	d2rq:jdbcDSN "jdbc:postgresql://localhost/d2rq";
	d2rq:username "d2rq";
	d2rq:password "d2rq";
	.

# Table persona
map:persona a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "persona/@@persona.id@@";
	d2rq:class schm:Person;
	d2rq:classDefinitionLabel "persona";
	.
map:persona__label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:persona;
	d2rq:property rdfs:label;
	d2rq:pattern "persona #@@persona.id@@";
	.
map:persona_id a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:persona;
	d2rq:property vocab:persona_id;
	d2rq:propertyDefinitionLabel "persona id";
	d2rq:column "persona.id";
	d2rq:datatype xsd:integer;
	.
map:persona_nombre a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:persona;
	d2rq:property schm:givenName;
	d2rq:propertyDefinitionLabel "persona nombre";
	d2rq:column "persona.nombre";
	.
map:persona_apellido a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:persona;
	d2rq:property schm:familyName;
	d2rq:propertyDefinitionLabel "persona apellido";
	d2rq:column "persona.apellido";
	.
map:persona_creation a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:persona;
	d2rq:property vocab:persona_creation;
	d2rq:propertyDefinitionLabel "persona creation";
	d2rq:column "persona.creation";
	d2rq:datatype xsd:date;
	.

